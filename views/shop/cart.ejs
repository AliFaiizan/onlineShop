<%- include('../includes/head.ejs') %>
    </head>
    
    <body>
        <%- include('../includes/navigation.ejs') %>
        
        <main>
            <% total=0 %> 
            <% if (prods.length > 0) { %>
                <div class="grid">
                    <% for (let product of prods) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title">
                                    <%= product.title %>
                                </h1>
                            </header>
                            <div class="card__image">
                                <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$
                                    <%= product.price %>
                                </h2>
                                <h4 >
                                    X <%= product.cartItem.quantity %>
                                </h4> <span>Total : <%= product.price * product.cartItem.quantity %>  </span>
                                <p class="product__description">
                                    <%= product.description %>
                                </p>
                            </div>
                            <div class="card__actions">
                                <form action="/cart/removeitem" method="POST">
                                    <input type="hidden" value="<%= product.id %>" name="productId">
                                    
                                    <button class="btn danger" type="submit">Delete</button>
                                </form>

                            </div>
                             <%  total= total + product.price * product.cartItem.quantity %> 
                        </article>
                        <% } %>

                        
                </div>
                <hr>
                 <span> <b> Grand Total : $</b><b><%=total %></b> </span>
                 <hr>
                 <div class="centered">
                    <form action="/orders" method="POST">
                    <button class="btn">Order Now</button>
                    </form>
                 </div>
                    
                <% } else { %>
                    <h1 class="centered">Cart is Empty!</h1>
                    <% } %>
                    
        </main>
        <%- include('../includes/end.ejs') %>