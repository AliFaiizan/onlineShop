<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/productDetail.css">
</head>
<body>


<%- include('../includes/navigation.ejs')%>


    <div class="wrapper" id="app">
        <div class="card-form">
            <div class="card-list">
                <div class="card-item -front">
                    <div class="card-item__side">
                        <div class="card-item__cover">
                            <img src="<%= product.imageUrl %>" alt="<%= product.title %>" class="card-item__bg">
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-form__inner">
                <div class="card-title"><%= product.title %></div>
                <div class="rating">
                    <span class="sr-only">Rating: 3 out of 5 stars</span>
                    <span class="fas fa-star" aria-hidden="true"></span>
                    <span class="fas fa-star" aria-hidden="true"></span>
                    <span class="fas fa-star" aria-hidden="true"></span>
                    <span class="far fa-star" aria-hidden="true"></span>
                    <span class="far fa-star" aria-hidden="true"></span>
                </div>
                <div class="card-description">
                    <p> <%= product.description %></p>
                </div>
                <div class="price">
                    <p> <span class="new-price">$<%= product.price %></span> <span class="original-price"><span class="sr-only">Originally:</span>$20.00</span>
                    </p>

                </div>
                    <%- include('../includes/add-to-cart',{product: product,isAuthenticated:isAuthenticated,csrfToken:csrfToken}) %>

            </div>

            </div>

    </div>



<%- include('../includes/end.ejs')%>

</body>